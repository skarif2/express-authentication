extends layout

block content
	.container.center
		h2= title
	.container
		.row
			form.col.s12
				.row
					.input-field.col.s6
						input#last_name.validate(type='text')
						label(for='last_name') First Name
					.input-field.col.s6
						input#last_name.validate(type='text')
						label(for='last_name') Last Name
				.row
					.input-field.col.s12
