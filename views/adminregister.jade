extends layout

block content
	.container.center
		h2= title
	.container
		.row
			.col.s12.center.error-div
				if error
					p ERROR: #{error}
			form.col.s12(method='post')
				.row
					.input-field.col.s6
						input#first_name.validate(type='text', name='first_name', required="", aria-required="true")
						label(for='first_name') First Name
					.input-field.col.s6
						input#last_name.validate(type='text', name='last_name', required="", aria-required="true")
						label(for='last_name') Last Name
				.row
					.input-field.col.s12
						input#email.validate(type='email', name='email', required="", aria-required="true")
						label(for='email') Email
				.row
					.input-field.col.s12
						input#password.validate(type='password', name='password', required="", aria-required="true")
						label(for='password') Password
				button.btn.waves-effect.waves-light(type='submit')
					| Submit
					i.material-icons.right send
