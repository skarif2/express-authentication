extends layout

block content
  .container.center
    .row
      h4 Welcome to #{title} #{admin.first_name}
      .fixed-action-btn(style='bottom: 45px; right: 24px;')
        a.btn-floating.btn-large.red(href='/dashboard/addbook')
          i.large.material-icons add
  .container
    .row
      if books
        each book in books
          .col.s12.m6.l4
            .col.s12.book-container
              .col.s12.book-top
                h5 #{book.title}
              .col.s6.book-description
                p #{book.description}
              .col.s6
                img(src='#{book.image_url}').book-img
              .col.s12.book-line
                hr.z-depth-4
              .col.s12.book-bottom
                a.left.waves-effect.waves-light.btn(href='/dashboard/books/#{book._id}') Details
                button.right.btn.waves-effect.waves-light(type='submit', name='action')
                  i.material-icons.left thumb_up
                  span.right #{book.likes}
